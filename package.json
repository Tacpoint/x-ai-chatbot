    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@types/yargs": "^17.0.33",
    "axios": "^1.8.1",
    "dotenv": "^16.4.7",
    "node-cron": "^3.0.3",
    "openai": "^4.86.1",
    "twitter-api-v2": "^1.20.2",
    "yargs": "^17.7.2"
  }
